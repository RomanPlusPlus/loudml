{
  "variables": {
    "output_dir": "build"
  },
  "builders":
  [
    {
      "type": "qemu",
      "iso_url": "http://centos.mirrors.ovh.net/ftp.centos.org/7.3.1611/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
      "iso_checksum": "d2ec6cfa7cf6d89e484aa2d9f830517c",
      "iso_checksum_type": "md5",
      "output_directory": "{{user `output_dir`}}",
      "shutdown_command": "shutdown now",
      "disk_size": 10000,
      "format": "qcow2",
      "headless": false,
      "accelerator": "kvm",
      "http_directory": "http",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "root",
      "ssh_password": "root",
      "ssh_port": 22,
      "ssh_wait_timeout": "30000s",
      "vm_name": "elasticsearch",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "5s",
      "boot_command":
      [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/elasticsearch.ks<enter><wait>"
      ],
      "qemuargs": [
        [ "-m", "4096" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "postinst-elastic.sh",
      "execute_command": "sudo bash -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "postinst-common.sh",
      "execute_command": "sudo bash -c '{{ .Vars }} {{ .Path }}'"
    }
  ]
}
